@model KaylaBugTracker.ViewModels.ProjectWizardVM
@{
	ViewBag.Title = "ProjectWizard";
	@*<a href="~/Views/Shared/_Layout.cshtml">~/Views/Shared/_Layout.cshtml</a>*@
}

<div class="main-panel">
	<div class="content-wrapper">
		<div class="card">
			<div class="card-header text-center">
				<h2>Create New Project</h2>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-10 offset-1">


						<div class="card">
							<div class="card-body">
								@*@if (ViewBag.Errors.Length > 0)
						{
							<span class="text-danger">
								@Html.Raw(ViewBag.Errors)
							</span>
						}
						else
						{
							<h1>Yes, that DID work</h1>
						}
						<h2>ProjectWizard</h2>*@
								@using (Html.BeginForm("ProjectWizard", "Projects", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
								{
									@Html.AntiForgeryToken()

									<div class="form-horizontal" id="example-form">
										<h4>Project</h4>
										<hr />
										@Html.ValidationSummary(true, "", new { @class = "text-danger" })
										<div>
											<h3>Project Name</h3>
											<section>
												<div class="form-group">
													@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
													<div class="col-md-10">
														@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
														@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
													</div>
												</div>
											</section>
											<h3>Project Manager</h3>
											<section>
												<div class="form-group">
													@Html.LabelFor(model => model.ProjectManagerId, "ProjectManagerIds", htmlAttributes: new { @class = "control-label col-md-2" })
													<div class="col-md-10">
														@Html.DropDownList("ProjectManagerId", null, htmlAttributes: new { @class = "form-control" })
													</div>
												</div>
											</section>
											<h3>Developer(s)</h3>
											<section>
												<div class="form-group">
													@Html.LabelFor(model => model.DeveloperIds, "DeveloperIds", htmlAttributes: new { @class = "control-label col-md-2" })
													<div class="col-md-10">
														<div class="checkbox">
															@Html.ListBox("DeveloperIds", null, htmlAttributes: new { @class = "form-control" })
														</div>
													</div>
												</div>
											</section>
											<h3>Submitter(s)</h3>
											<section>
												<div class="form-group">
													@Html.LabelFor(model => model.SubmitterIds, "SubmitterIds", htmlAttributes: new { @class = "control-label col-md-2" })
													<div class="col-md-10">
														<div class="checkbox">
															@Html.ListBox("SubmitterIds", null, htmlAttributes: new { @class = "form-control" })
														</div>
													</div>
												</div>
												<div class="form-group float-right">
													<div class="col-md-offset-2 col-md-10">
														<input type="submit" value="Create" class="btn btn-success" />
													</div>
												</div>
											</section>
										</div>
									</div>
								}

							</div>
						</div>
					</div>
				</div>
				@*<form id="example-form" action="#">*@
			</div>
		</div>
	</div>
</div>
@using KaylaBugTracker.Helpers
@using Microsoft.AspNet.Identity
@model IEnumerable<KaylaBugTracker.Models.Project>

@{
	ViewBag.Title = "Index";
	var projectHelper = new ProjectHelper();
}

<div class="main-panel">
	<div class="content-wrapper">
		<div class="page-header">
			<h2>All Projects</h2>
		</div>
		<div class="card">
			<div class="card-body">
				@if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
				{
					<p>
						@Html.ActionLink("Create New", "Create", "Projects")
					</p>
				}
			</div>
		</div>
		<div class="card">
			<div class="card-body">
				<table id="myTable" class="table table-bordered">
					<thead>
						<tr>
							<th>
								@Html.DisplayNameFor(model => model.Name)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Created)
							</th>
							<th>
								@Html.DisplayName("Archived")
							</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.Name)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Created)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.IsArchived)
								</td>
								<td>
									@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
									@Html.ActionLink("Details", "Details", new { id = item.Id })
								</td>
							</tr>
						}
					</tbody>
				</table>

				@if (User.IsInRole("Developer") || User.IsInRole("Submitter"))
				{
					<h3>My Projects</h3>
					<br />
					<table id="myTable2" class="table table-bordered">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Name)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Created)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.IsArchived)
								</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in projectHelper.ListUserProjects(User.Identity.GetUserId()))
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Name)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Created)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.IsArchived)
									</td>
									<td>
										@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
										@Html.ActionLink("Details", "Details", new { id = item.Id })
									</td>
								</tr>
							}
						</tbody>
					</table>
				}

				</div>
			</div>
		</div>

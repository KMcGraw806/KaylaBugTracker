@model KaylaBugTracker.Models.ForgotPasswordViewModel
@{
	ViewBag.Title = "Forgot your password?";
	Layout = null;
}
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}

<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title>KSM Bug Tracker</title>
	<link rel="shortcut icon" href="~/Images/favicon-32x32.png" />
	<!-- plugins:css -->
	<link href="~/Content/materialdesignicons.min.css" rel="stylesheet" />
	<link href="~/Content/vendor.bundle.base.css" rel="stylesheet" />
	<!-- endinject -->
	<!-- Plugin css for this page -->
	<!-- End plugin css for this page -->
	<!-- inject:css -->
	<!-- endinject -->
	<!-- Layout styles -->
	<link href="~/Content/style.css" rel="stylesheet" />
	<link href="~/Content/custom.css" rel="stylesheet" />
	<!-- End layout styles -->

</head>
<body>
	<div class="container-scroller">
		<div class="container-fluid page-body-wrapper full-page-wrapper">
			<div class="content-wrapper d-flex align-items-center auth">
				<div class="row flex-grow">
					<div class="col-lg-4 mx-auto">
						<div class="auth-form-light p-5">
							<div class="row align-items-baseline">
								<div class="col-7 float-left">
									<h2>Forgot your password?</h2>
								</div>
								<div class="float-right">
									<img src="~/Images/Logo.png" />
								</div>
							</div>
							<section id="forgotPassword">
								@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
								{
									@Html.AntiForgeryToken()
									<h4>Enter your email.</h4>
									<hr />
									@Html.ValidationSummary("", new { @class = "text-danger" })

									<div class="form-group">
										<input type="email" name="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email" />
									</div>
									<div class="form-group">
										<div class="col-6 offset-3">
											<input type="submit" class="btn btn-inverse-success btnWide" value="Email Link" />
										</div>
									</div>
								}
							</section>
						</div>
					</div>
				</div>
			</div>
			<!-- content-wrapper ends -->
		</div>
		<!-- page-body-wrapper ends -->
	</div>
	<!-- container-scroller -->
	<!-- plugins:js -->
	<script src="~/Scripts/vendor.bundle.base.js"></script>
	<!-- endinject -->
	<!-- Plugin js for this page -->
	<!-- End plugin js for this page -->
	<!-- inject:js -->
	<script src="~/Scripts/off-canvas.js"></script>
	<script src="~/Scripts/hoverable-collapse.js"></script>
	<script src="~/Scripts/misc.js"></script>
	<script src="~/Scripts/settings.js"></script>
	<script src="~/Scripts/todolist.js"></script>
	<!-- endinject -->
</body>
</html>